{
  "name": "ps2alerts-aggregator",
  "version": "4.0.6",
  "description": "The aggregator collection script that powers PS2Alerts.com.",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "cp -r src/ps2alerts-constants/maps dist/ps2alerts-constants",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "build:watch": "tsc -w",
    "wipe": "rimraf dist",
    "lint:check": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://Maelstromeous@github.com/PS2Alerts/aggregator.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ps2alerts/aggregator/issues"
  },
  "homepage": "https://github.com/ps2alerts/aggregator#readme",
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/microservices": "^9.1.2",
    "@nestjs/platform-fastify": "^9.1.2",
    "@nestjs/terminus": "^9.1.1",
    "amqp-connection-manager": "^4.1.4",
    "amqplib": "^0.10.0",
    "axios": "^0.27.2",
    "dotenv": "^16.0.2",
    "ioredis": "^5.2.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.33",
    "ps2census": "^4.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.3",
    "utf-8-validate": "^5.0.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/amqplib": "^0.8.2",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.6.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
